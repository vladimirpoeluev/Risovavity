<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:AvaloniaRisovaviti.ViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaRisovaviti.CartOfAuthor"
			 x:DataType="vm:CartOfAuthorViewModel">
	<Design.DataContext>
		<vm:CartOfAuthorViewModel/>
	</Design.DataContext>
	<WrapPanel Orientation="Horizontal">
		<Image Width="50"
			   Height="50"/>
		<StackPanel Margin="10">
			<TextBlock Text="{Binding UserOfCart.Name}"/>
			<TextBlock Text="{Binding UserOfCart.Email}"/>
		</StackPanel>
			
	</WrapPanel>
</UserControl>
