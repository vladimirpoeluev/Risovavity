<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaRisovaviti.ProfileEditerPage"
			 xmlns:vm="using:AvaloniaRisovaviti.ViewModel"
			 x:DataType="vm:ProfileEditerPageViewModel">
	<Design.DataContext>
		<vm:ProfileEditerPageViewModel/>
	</Design.DataContext>
	<Grid>
		<StackPanel HorizontalAlignment="Center" 
					VerticalAlignment="Center">
			<TextBlock Text="Профиль"
					   FontSize="20"/>
			<TextBlock Text="Имя"/>
			<TextBox Text="{Binding UserResult.Name}"/>
			<TextBlock Text="Почта"/>
			<TextBlock Text="{Binding UserResult.Email}"/>
			<TextBlock Text="Роль"/>
			<TextBlock Text="{Binding UserResult.IdRoleNavigation.Name}"/>
			<Button Click="EditProfile" Content="Сохранить изменения"/>
		</StackPanel>
	</Grid>
</UserControl>
