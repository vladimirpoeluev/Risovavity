<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:us="using:AvaloniaRisovaviti.Assets"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaRisovaviti.SettingsView">
	<UserControl.Styles>
		<StyleInclude Source="/Styles/SettingsStyles.axaml"/>
	</UserControl.Styles>
	<UniformGrid>
		<Button HorizontalAlignment="Stretch"
				VerticalAlignment="Stretch"
				Content="{x:Static us:Resource.security}"
				Click="NavSafety_Click"
				Classes="safety-nextbutton">
		</Button>
		<Button HorizontalAlignment="Stretch"
				VerticalAlignment="Stretch"
				Classes="profile-settings-nextbutton"
				Content="{x:Static us:Resource.profileSettings}"
				Click="Button_Click_1">
		</Button>
		<Button HorizontalAlignment="Stretch"
				VerticalAlignment="Stretch"
				Content="{x:Static us:Resource.appSettings}"
				Classes="app-settings-nextbutton"
				Click="Button_Click"/>
		<Button HorizontalAlignment="Stretch"
				VerticalAlignment="Stretch"
				Content="{x:Static us:Resource.aboutApp}"
				Classes="app-description-nextbutton"
				Click="Button_Click_2"/>
	</UniformGrid>
</UserControl>
