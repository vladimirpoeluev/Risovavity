<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaRisovaviti.SettingsView">
	<UserControl.Styles>
		<StyleInclude Source="/Styles/SettingsStyles.axaml"/>
	</UserControl.Styles>
	<UniformGrid>
		<Button HorizontalAlignment="Stretch"
				VerticalAlignment="Stretch"
				Click="NavSafety_Click"
				Classes="safety-nextbutton">
			Безопасность
		</Button>
		<Button HorizontalAlignment="Stretch"
				VerticalAlignment="Stretch"
				Classes="profile-settings-nextbutton">
			Настройки профиля
		</Button>
		<Button HorizontalAlignment="Stretch"
				VerticalAlignment="Stretch"
				Content="Настройки приложения"
				Classes="app-settings-nextbutton"
				Click="Button_Click"/>
		<Button HorizontalAlignment="Stretch"
				VerticalAlignment="Stretch"
				Content="О приложении"
				Classes="app-description-nextbutton"/>
	</UniformGrid>
</UserControl>
