<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaRisovaviti.ErrorNotConnectView">
	<Grid ColumnDefinitions="*,auto">
		<Image Source="avares://AvaloniaRisovaviti/Assets/Icons/errro-connect-icon.png"/>
		<Grid Grid.Column="1">
			<StackPanel VerticalAlignment="Center">
				<TextBlock Classes="h1">
					Ошибка подключения
				</TextBlock>
				<TextBlock>
					- Проверьте сетевые кабели, модем и маршрутизатор <LineBreak/>
					- Подключитесь к сети WI-FI еще раз
				</TextBlock>
			</StackPanel>
		</Grid>
		
	</Grid>
</UserControl>
