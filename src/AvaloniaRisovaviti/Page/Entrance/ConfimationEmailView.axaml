<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:accets="clr-namespace:AvaloniaRisovaviti.Assets;assembly=AvaloniaRisovaviti"
			 xmlns:vm ="using:AvaloniaRisovaviti.ViewModel.Main"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaRisovaviti.ConfimationEmailView"
			 x:DataType="vm:ConfimationEmailViewModel">
	<Grid>
		<StackPanel HorizontalAlignment="Center"
					VerticalAlignment="Center">
			<TextBlock Text="{x:Static accets:Resource.Code}"/>
			<TextBox Text="{Binding Code}"/>
			<Button Content="{x:Static accets:Resource.Confirm}"
					Command="{Binding NavEntrance}"/>
		</StackPanel>
	</Grid>
</UserControl>
