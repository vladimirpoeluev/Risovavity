	<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vm="using:AvaloniaRisovaviti.ViewModel"
			 x:Class="AvaloniaRisovaviti.EntrancePage"
			 x:DataType="vm:EntrancePageViewModel">
	<Design.DataContext>
		<vm:AuthorViewModel/>
	</Design.DataContext>
	<Grid>
		<StackPanel HorizontalAlignment="Center"
					VerticalAlignment="Center"
					Width="300">
			<Label Content="Вход"
				   FontSize="35"/>
			<Label Content="Логин"/>
			<TextBox Text="{Binding Login}"/>
			<Label Content="Пароль"/>
			<TextBox PasswordChar="⚫" Text="{Binding Password}" FontSize="10"/>
			<TextBlock Foreground="Red" Text="{Binding Error}"/>
			<Button HorizontalAlignment="Stretch"
					Margin="5"
					Click="Button_Click">
				<TextBlock Text="Войти"
						   HorizontalAlignment="Center"/>
			</Button>


			<Button HorizontalAlignment="Stretch"
					Margin="5"
					Click="Reg_Click">
				<TextBlock Text="Зарегистрироваться"
						   HorizontalAlignment="Center"/>
			</Button>


		</StackPanel>
	</Grid>
</UserControl>
